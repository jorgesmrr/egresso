			</div>
			<div class= "infos">
				<label sclass= "nome_perfil" value ="@load(vm.aluno.nome)"/>
				<label sclass="turma_perfil" value ="@load('Turma do '.concat(vm.aluno.turma.semestre).concat('Â° ').concat('semestre do ano de ').concat(vm.aluno.turma.ano).concat('.'))"/>
				</div>
		</div>
		<div class="ver_perfil_fb">
			<button class="btn"  id="btn_visitar_perfil" label="Ver Perfil no Facebook" href ="@load(vm.aluno.linkFacebook)"/>
		</div>
	</div>
	
	
</zk>
